{
  "name": "<%= projectNameSlugified %>",
  "title": "<%= projectName %>",
  "description": "<%= projectDescription %>",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "<%= repoUrl %>"
  },
  "authors": [
    {
      "name": "<%= devNames %>"
    }
  ],
  "engines": {
    "node": ">=6.0"
  },
  "scripts": {
    "start": "gulp serve",
    "predeploy": "npm prune && npm install",
    "deploy": "npm run compile:release",
    "test": "npm run lint:js && npm run lint:css",
    "compile:release": "gulp compile --release",
    "compile:all": "gulp compile",
    "compile:css": "gulp css",
    "compile:js": "gulp javascript",
    "compile:svg": "gulp svg",
    "compress:images": "gulp images",
    "watch": "gulp watch",
    "lint:js": "xo",
    "lint:css": "gulp test:css",
    "fix:js": "xo --fix",
    "release-patch": "release-it --non-interactive patch",
    "release-minor": "release-it --non-interactive minor",
    "release-major": "release-it --non-interactive major",
    "release-premajor": "release-it premajor --prereleaseId=\"beta\""
  },
  "dependencies": {
    "console": "0.5.2",
    "copy-js": "0.1.1",
    "double-dollar": "1.0.0",
    "include-media": "1.4.9",
    "kickoff-fluidVideo.css": "1.1.0",
    "kickoff-grid.css": "1.1.1",
    "kickoff-utils.scss": "2.0.3",
    "kickoff-welcome.js": "1.3.0",
    "lite-ready": "1.0.4",
    "normalize-scss": "6.0.0",
    "svg4everybody": "2.1.4"<%

    if (!includeDominus || !includeJquery) {%>,
    "double-dollar": "^1.0.0"<%
    }

    if (includeLodash) {%>,
    "lodash": "^4.13.1"<%
    }

    if (includeLazysizes) {%>,
    "lazysizes": "^1.5.0"<%
    }

    if (includeAxios) {%>,
    "axios": "^0.11.1"<%
    }

    if (includeFlickity) {%>,
    "flickity": "^1.2.0"<%
    }

    if (includeAttach) {%>,
    "attach.js": "^1.0.5"<%
    }

    if (includeDominus) {%>,
    "dominus": "^5.0.6"<%
    }

    if (includeSwiftclick) {%>,
    "swiftclick": "^1.2.0"<%
    }

    if (includeTrak) {%>,
    "trak.js": "^0.5.2"<%
    }

    if (includeJquery && !includeDominus) {%>,
    "jquery": "^1.11.1"<%
    }

    if (includeJquery && !includeDominus) {%>,
    "jquery": "^3.1.0"<%
    } %>
  },
  "devDependencies": {
    "autoprefixer": "6.6.0",
    "babel-core": "6.21.0",
    "babel-loader": "6.2.10",
    "babel-plugin-transform-object-assign": "6.8.0",
    "babel-preset-es2015": "6.18.0",
    "browser-sync": "2.18.5",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "cssnano": "3.9.1",
    "del": "2.2.2",
    "eyeglass": "1.2.1",
    "filesizegzip": "2.0.0",
    "gulp": "3.9.1",
    "gulp-banner": "0.1.3",
    "gulp-imagemin": "3.1.1",
    "gulp-postcss": "6.2.0",
    "gulp-sass": "2.3.2",
    "gulp-sourcemaps": "2.2.2",
    "gulp-stylelint": "3.7.0",
    "gulp-svgmin": "1.2.3",
    "gulp-svgstore": "6.1.0",
    "gulp-tap": "0.1.3",
    "gulp-util": "3.0.8",
    "imagemin-pngquant": "5.0.0",
    "opn": "4.0.2",
    "postcss-flexbugs-fixes": "2.1.0",
    "release-it": "2.5.3",
    "stylelint": "7.7.0",
    "stylelint-config-standard": "15.0.1",
    "stylelint-selector-bem-pattern": "1.0.0",
    "webpack": "2.2.0-rc.3",
    "xo": "0.17.1"<%
    if (statix) {%>,
    "grunt-assemble": "^0.4.0",
    "handlebars-helper-aggregate": "^0.1.3"<% } %>
  },
  "license": "UNLICENSED",
  "keywords": [
    "madewithkickoff",
    "âš½"
  ],
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "xo": {
    "esnext": true,
    "global": [
      "window"
    ],
    "ignores": [
      "**/assets/src/js/standalone/**/*.js",
      "**/assets/dist/**/*.js",
      ".kickoff/**/*.js",
      "gulpfile.js"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "xo/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "blockless-after-same-name-blockless",
            "blockless-group"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "rule-non-nested-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "after-single-line-comment"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "max-empty-lines": 2
    }
  }
}
